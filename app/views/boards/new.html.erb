<div class="form-group">
  <h1>Generate Board</h1>
</div>

<%= form_with model: @board do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
        <% @board.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-6 p-2">
    <%= f.label :email %>
    <%= f.text_field :email, required: true, type: :email, class: 'form-control' %>
  </div>

  <div class="form-group col-6 p-2">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group col-6 p-2">
    <%= f.label :height %>
    <%= f.text_field :height, required: true, type: :number, min: 0, class: 'form-control' %>
  </div>

  <div class="form-group col-6 p-2">
    <%= f.label :width %>
    <%= f.text_field :width, required: true, type: :number, min: 0, class: 'form-control' %>
  </div>

   <div class="form-group col-6 p-2">
    <%= f.label :mines_count %>
    <%= f.text_field :mines_count, required: true, type: :number, min: 0, class: 'form-control' %>
  </div>

  <div class="form-group p-2">
    <%= f.submit 'Generate Board', class: 'btn btn-lg btn-primary col-2' %>
  </div>
<% end %>

<% if @boards&.any? %>
  <br><br>

  <h2>Recently Generated Boards</h2>
  <%= render 'list', boards: @boards %>

  <br>
  <%= link_to 'View all generated boards', boards_path %>
<% end %>
